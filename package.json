{
  "name": "@synagi/nodejs-util",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "npm@9.5.0",
  "author": "freegheist",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "config.docs.json",
    "tsconfig.json"
  ],
  "scripts": {
    "format": "prettier --cache-location=.prettiercache --write  --log-level warn .",
    "clean": "rm -rf dist/ *.tsbuildinfo",
    "build": "npm run clean && tsc -p ./tsconfig.json",
    "test": "npm run build && node test.mjs",
    "docs": "npm run build && rm -rfv ./bin/docs && node ./dist/docgen/genDocs.js",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "glob": "^11.0.0",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.14.10",
    "prettier": "^3.3.2"
  }
}
