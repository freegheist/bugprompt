{
  "name": "@synagi/nodejs-util",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "npm@9.5.0",
  "author": "freegheist",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "config.docs.json"
  ],
  "scripts": {
    "format": "prettier --cache-location=.prettiercache --write  --log-level warn .",
    "clean": "tsc -b --clean && rm -rf dist/ *.tsbuildinfo",
    "build": "npm run format && npm run clean && tsc -b",
    "test": "npm run build && node test.mjs",
    "docs": "npm run build && rm -rfv ./bin/docs && node ./dist/docgen/genDocs.js",
    "postinstall": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.14.10",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  }
}
